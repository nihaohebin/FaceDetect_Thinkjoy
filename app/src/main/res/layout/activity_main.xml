<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/y36"
        android:layout_marginTop="@dimen/x14"
        android:text="2017年"
        android:textColor="@color/white"
        android:textSize="@dimen/y31" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/y36"
        android:layout_marginTop="@dimen/x5"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06"
            android:textColor="@color/white"
            android:textSize="@dimen/y63" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y17"
            android:text="月"
            android:textColor="@color/white"
            android:textSize="@dimen/y26" />

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y17"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="@dimen/y63" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y17"
            android:text="日"
            android:textColor="@color/white"
            android:textSize="@dimen/y26" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_marginTop="@dimen/x5">

        <LinearLayout
            android:id="@+id/llFrameFace"
            android:layout_width="@dimen/y444"
            android:layout_height="@dimen/x90"
            android:layout_gravity="center"
            android:background="@drawable/bg_frame_face"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y112"
                    android:text="手机"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y27" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y170"
                    android:text="平板"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y27" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x6"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFacePhonePortrait"
                    android:layout_width="@dimen/y113"
                    android:layout_height="@dimen/y113"
                    android:layout_marginLeft="@dimen/y16"
                    android:src="@drawable/btn_phone_portrait" />

                <ImageView
                    android:id="@+id/ivFacePhoneLandscape"
                    android:layout_width="@dimen/y113"
                    android:layout_height="@dimen/y113"
                    android:layout_marginLeft="@dimen/y21"
                    android:src="@drawable/btn_phone_landscape" />

                <ImageView
                    android:id="@+id/ivFacePadLandscape"
                    android:layout_width="@dimen/y113"
                    android:layout_height="@dimen/y113"
                    android:layout_marginLeft="@dimen/y46"
                    android:src="@drawable/btn_pad_landscape" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFrameAge"
            android:layout_width="@dimen/y444"
            android:layout_height="@dimen/x90"
            android:layout_gravity="center"
            android:background="@drawable/bg_frame_age"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="手机"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="平板"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x10" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x6"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAgePhoneLandscape"
                    android:layout_width="@dimen/y113"
                    android:layout_height="@dimen/y113"
                    android:layout_weight="1"
                    android:src="@drawable/btn_phone_landscape" />

                <ImageView
                    android:id="@+id/ivAgePadLandScape"
                    android:layout_width="@dimen/y113"
                    android:layout_height="@dimen/y113"
                    android:layout_weight="1"
                    android:src="@drawable/btn_pad_landscape" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x6"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llFaceDetect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/y107"
                android:layout_height="@dimen/y107"
                android:src="@drawable/btn_persondetect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="人员识别"
                android:textColor="@color/white"
                android:textSize="@dimen/y20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/y107"
                android:layout_height="@dimen/y107"
                android:src="@drawable/btn_age" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="性别年龄识别"
                android:textColor="@color/white"
                android:textSize="@dimen/y20"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRealDetect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/y107"
                android:layout_height="@dimen/y107"
                android:src="@drawable/btn_onlinedetect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="实时检测"
                android:textColor="@color/white"
                android:textSize="@dimen/y20"  />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x17"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/llPersonManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/y107"
                android:layout_height="@dimen/y107"
                android:src="@drawable/btn_personmanager" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="人员管理"
                android:textColor="@color/white"
                android:textSize="@dimen/y20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/y49"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/y107"
                android:layout_height="@dimen/y107"
                android:src="@drawable/ic_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="应用设置"
                android:textColor="@color/white"
                android:textSize="@dimen/y20"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
