<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flDetect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.tjoydoor.view.MyVideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.tjoydoor.view.camera.FaceOverlayViewAge
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:visibility="gone" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/flMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_msgage"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivRotate"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_roate" />

        <TextView
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="200dp"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/mianColor"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="140dp"
            android:gravity="center"
            android:text="性别"
            android:textColor="@color/mianColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvBoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="140dp"
            android:gravity="center"
            android:text="99.99%男"
            android:textColor="@color/mianColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvGirl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="140dp"
            android:gravity="center"
            android:text="0.01%男"
            android:textColor="@color/mianColor"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="120dp"
            android:gravity="center"
            android:text="年龄"
            android:textColor="@color/mianColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="110dp"
            android:layout_marginLeft="180dp"
            android:gravity="center"
            android:text="23"
            android:textColor="@color/mianColor"
            android:textSize="40sp" />

        <com.tjoydoor.view.RoundImageView
            android:id="@+id/ivHead"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginRight="120dp"
            android:src="@drawable/ic_msgleft" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:src="@drawable/ic_msgright" />


        <TextView
            android:id="@+id/tvSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/mianColor"
            android:textSize="15sp" />
    </FrameLayout>
</FrameLayout>
